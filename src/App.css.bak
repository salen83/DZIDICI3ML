.top-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20px;
  margin: 0; /* uklonili marginu */
  padding: 10px 0; /* dodali padding da se lepo vidi */
  font-family: Arial, sans-serif;
  font-weight: bold;
  background-color: #87ceeb; /* nebo-plava pozadina */
}

.top-bar span {
  font-size: 32px; /* veći font */
  font-weight: bold;
  text-decoration: underline; /* podvučen tekst */
}

.top-bar button {
  background-color: #4caf50;
  color: white;
  border: none;
  padding: 6px 12px;
  border-radius: 4px;
  cursor: pointer;
  font-weight: bold;
  font-size: 16px;
}

.top-bar button:disabled {
  background-color: #ccc;
  cursor: not-allowed;
}
