.screen1-container {
  width: 95%; /* ukupna širina tabele */
  margin: 0 auto;
  font-family: Arial, sans-serif;
}

.screen1-topbar {
  display: flex;
  gap: 3px;
  margin-bottom: 2px;
  font-size: 12px;
}

.screen1-table-wrapper {
  overflow-x: hidden;
}

.screen1-row {
  display: flex;
  align-items: center;
  gap: 4px;              /* ✅ MALI RAZMAK IZMEĐU KOLONA */
  border-bottom: 1px solid transparent; /* linije nevidljive */
  padding: 0;
  font-size: 12px;
  height: 28px; /* maksimalno zgusnuto */
}

.col {
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 2px;
}

/* optimalne širine kolona za portrait */
.col.rb { width: 24px; font-size: 10px; }             
.col.info { width: 80px; flex-direction: column; align-items: flex-start; font-size: 11px; } 
.col.teams { width: 140px; justify-content: flex-start; font-size: 11px; font-weight: bold; } 
.col.results { width: 60px; flex-direction: column; align-items: center; font-size: 11px; } 
.col.delete { width: 20px; }

/* info i results stilovi */
.info-top { font-size: 9px; line-height: 1.1; cursor: text; }
.info-center { font-size: 11px; font-weight: bold; line-height: 1.1; cursor: text; }
.results-top { font-size: 9px; line-height: 1.1; cursor: text; }
.results-center { font-size: 11px; font-weight: bold; line-height: 1.1; cursor: text; }

/* input stil */
.edit-input {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  font-family: Arial, sans-serif;
  font-size: inherit;
  font-weight: inherit;
  border: 1px solid #555;
  padding: 0 2px;
  margin: 0;
}

/* trepćuća crtica samo za aktivno polje */
.edit-cursor {
  display: inline-block;
  width: 2px;
  background-color: black;
  animation: blink 1s steps(1) infinite;
  margin-left: 2px;
}

@keyframes blink {
  0%, 50%, 100% { opacity: 1; }
  25%, 75% { opacity: 0; }
}
